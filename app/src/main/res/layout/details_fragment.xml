<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white_bg"
    android:padding="15dp"
    android:fillViewport="true"
    android:scrollbars="none"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Asset Name"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_asset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_asset"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Bid Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_bid"
                    android:layout_marginBottom="10dp"
                     />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Ask Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_ask"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_open_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Open Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_open_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_open_price"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Low Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_low"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="High Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_high"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView style="@style/CardViewStyle">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_prefix_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="10dp"
                    android:minWidth="65dp"
                    android:text="Last Price"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/view_last"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_prefix_last"
                    android:layout_marginBottom="10dp"
                    android:text="0.00" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>




</ScrollView>